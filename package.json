{
  "name": "sabiscore-monorepo",
  "version": "3.0.0",
  "private": true,
  "description": "Edge-first Next.js 15 + FastAPI monorepo powering Sabiscore - Sub-150ms TTFB, 10k CCU, +18% ROI",
  "license": "MIT",
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.8.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@sabiscore/web",
    "dev:api": "cd apps/api && uvicorn src.api.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "turbo run build",
    "build:local": "node ./scripts/build-local.js",
    "build:web": "turbo run build --filter=@sabiscore/web",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:build": "docker-compose -f docker-compose.prod.yml build"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^8.12.1",
    "@typescript-eslint/parser": "^8.12.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.3.5",
    "turbo": "^2.6.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "next": "^15.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1"
  }
}
