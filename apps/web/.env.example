# ============================================================================
# SabiScore 3.0 Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# ============================================================================
# REQUIRED - External APIs
# ============================================================================

# Odds API (Free tier: 500 requests/month)
# Get your key at: https://the-odds-api.com/
ODDS_API_KEY=000974fa1984eddc45c57d6217cb43bb

# Cron Job Secret (for Vercel cron authentication)
# Generate with: openssl rand -base64 32
CRON_SECRET=your_cron_secret_here

# ============================================================================
# OPTIONAL - Backend API Configuration
# ============================================================================

# Backend API URL (defaults to Render deployment)
NEXT_PUBLIC_API_URL=https://sabiscore-api.onrender.com

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=wss://sabiscore-api.onrender.com

# ============================================================================
# OPTIONAL - Betting Configuration
# ============================================================================

# Currency settings
NEXT_PUBLIC_CURRENCY=NGN
NEXT_PUBLIC_CURRENCY_SYMBOL=₦

# Default bankroll (₦10,000)
NEXT_PUBLIC_BASE_BANKROLL=10000

# Kelly fraction (1/8 = 0.125 for conservative)
# Options: 0.125 (conservative), 0.25 (moderate), 0.5 (aggressive)
NEXT_PUBLIC_KELLY_FRACTION=0.125

# Minimum edge required to place bet (6.6% = ₦66 expected value on ₦1000 bet)
NEXT_PUBLIC_MIN_EDGE_NGN=66

# ============================================================================
# OPTIONAL - Model Training Configuration
# ============================================================================

# Minimum number of matches for training
TRAINING_MIN_MATCHES=300

# Validation split (20% = 0.2)
TRAINING_VALIDATION_SPLIT=0.2

# Training epochs per model
TRAINING_EPOCHS_DENSE=50
TRAINING_EPOCHS_LSTM=40
TRAINING_EPOCHS_CNN=30

# Batch size for training
TRAINING_BATCH_SIZE=32

# ============================================================================
# OPTIONAL - Monitoring & Analytics
# ============================================================================

# Enable verbose logging
DEBUG=false

# Monitoring data retention (days)
MONITORING_RETENTION_DAYS=90

# Drift detection sensitivity (0-1, higher = more sensitive)
DRIFT_SENSITIVITY=0.05

# ============================================================================
# OPTIONAL - Performance Tuning
# ============================================================================

# Cache TTL for odds data (seconds)
ODDS_CACHE_TTL=300

# API timeout (milliseconds)
API_TIMEOUT=10000

# Max retries for failed requests
API_MAX_RETRIES=2

# ============================================================================
# OPTIONAL - StatsBomb Data Source
# ============================================================================

# StatsBomb API base URL (GitHub raw content)
STATSBOMB_BASE_URL=https://raw.githubusercontent.com/statsbomb/open-data/master/data

# Competitions to include in training
# Comma-separated list of competition IDs
STATSBOMB_COMPETITIONS=11,37,43,49,72

# ============================================================================
# OPTIONAL - Feature Flags
# ============================================================================

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTS=false

# Enable Monte Carlo simulation in UI
NEXT_PUBLIC_ENABLE_MONTE_CARLO=true

# Enable drift detection alerts
ENABLE_DRIFT_ALERTS=true

# Enable odds aggregation from multiple sources
ENABLE_MULTI_SOURCE_ODDS=true

# ============================================================================
# OPTIONAL - Development Settings (local only)
# ============================================================================

# Offline mode for insights API (skip slow upstream during dev)
INSIGHTS_OFFLINE=false

# Insights API timeout (ms)
INSIGHTS_TIMEOUT_MS=12000

# Insights API max retries
INSIGHTS_MAX_RETRIES=0

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Vercel automatically loads .env.local during development
# 2. Add production values in Vercel dashboard: Settings → Environment Variables
# 3. Never commit .env.local or any file with actual secrets
# 4. Use NEXT_PUBLIC_ prefix for client-side variables
# 5. Cron secret should be unique and kept secure
#
# ============================================================================
