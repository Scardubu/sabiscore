{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd apps/web && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "apps/web/.next",
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_PUBLIC_API_URL": "@api_url",
      "NEXT_PUBLIC_WS_URL": "@ws_url",
      "NEXT_PUBLIC_CURRENCY": "NGN",
      "NEXT_PUBLIC_CURRENCY_SYMBOL": "â‚¦",
      "NEXT_PUBLIC_BASE_BANKROLL": "10000",
      "NEXT_PUBLIC_KELLY_FRACTION": "0.125",
      "NEXT_PUBLIC_MIN_EDGE_NGN": "66"
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "production": "https://sabiscore-api.onrender.com",
      "preview": "https://sabiscore-api.onrender.com",
      "development": "http://localhost:8000"
    },
    "NEXT_PUBLIC_WS_URL": {
      "production": "wss://sabiscore-api.onrender.com",
      "preview": "wss://sabiscore-api.onrender.com",
      "development": "ws://localhost:8000"
    }
  },
  "regions": ["iad1", "lhr1", "fra1"],
  "functions": {
    "apps/web/app/**/*.tsx": {
      "runtime": "edge",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=15, stale-while-revalidate=30"
        }
      ]
    },
    {
      "source": "/match/:id",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=15, stale-while-revalidate=60, must-revalidate"
        },
        {
          "key": "X-Edge-Cache",
          "value": "HIT"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "https://sabiscore-api.onrender.com/api/v1/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/health",
      "destination": "/api/health",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/cron/calibrate",
      "schedule": "*/3 * * * *"
    },
    {
      "path": "/api/cron/fetch-odds",
      "schedule": "*/5 * * * *"
    }
  ]
}
